{
  "name": "ragdoll",
  "private": true,
  "scripts": {
    "check": "npm-run-all check:default check:test check:ast-grep check:resolve-v5-deps",
    "fix": "npm-run-all 'check:default -- --write' 'check:test -- --write'",
    "check:ast-grep": "ast-grep scan",
    "check:default": "biome check .",
    "check:test": "biome check --config-path=./biome.test.json .",
    "test": "turbo test",
    "tsc": "turbo tsc",
    "build:server": "turbo --filter @ragdoll/server --filter @ragdoll/website build",
    "dep-check": "bun scripts/dep-check.ts",
    "prepare": "husky",
    "pre-push": "bash ./.husky/pre-push",
    "check:resolve-v5-deps": "bun scripts/resolve-v5-deps",
    "postinstall": "bun check:resolve-v5-deps --silent"
  },
  "workspaces": {
    "packages": ["packages/*"],
    "catalog": {
      "@preact/signals-core": "^1.8.0",
      "@quilted/threads": "^3.1.3",
      "@google/genai": "^1.13.0",
      "@slack/bolt": "^4.2.1",
      "ai": "^4.3.16",
      "better-auth": "^1.2.9",
      "@daveyplate/better-auth-tanstack": "^1.3.6",
      "@better-auth/stripe": "^1.2.9",
      "hono": "^4.7.5",
      "kysely": "^0.27.6",
      "moment": "^2.30.1",
      "react": "^19",
      "react-icons": "^5.5.0",
      "remeda": "^2.21.3",
      "zod": "^3.25.76",
      "file-type": "^20.4.1",
      "tslog": "^4.9.3",
      "tailwindcss-animate": "^1.0.7",
      "tailwindcss": "^4.0.6",
      "@tailwindcss/vite": "^4.0.6",
      "emittery": "^1.1.0",
      "@ai-v5-sdk/ai": "npm:ai@5",
      "@ai-v5-sdk/provider-utils": "npm:@ai-sdk/provider-utils@3",
      "@ai-v5-sdk/openai-compatible": "npm:@ai-sdk/openai-compatible@1",
      "@ai-v5-sdk/react": "npm:@ai-sdk/react@2",
      "@ai-v5-sdk/provider": "npm:@ai-sdk/provider@2",
      "@hono/zod-validator": "^0.4.3",
      "@livestore/react": "0.3.1",
      "@livestore/adapter-node": "0.3.1",
      "@livestore/adapter-web": "0.3.1",
      "@livestore/livestore": "0.3.1",
      "@livestore/peer-deps": "0.3.1",
      "@livestore/devtools-vite": "0.3.1",
      "@livestore/wa-sqlite": "1.0.5-dev.2"
    }
  },
  "devDependencies": {
    "@ast-grep/cli": "^0.38.5",
    "@biomejs/biome": "1.9.4",
    "depcheck": "^1.4.7",
    "husky": "^9.1.7",
    "npm-run-all": "^4.1.5",
    "turbo": "^2.5.5",
    "typescript": "^5.7.2",
    "vitest": "^3.2.4"
  },
  "packageManager": "bun@1.2.19",
  "trustedDependencies": ["@ast-grep/cli"],
  "patchedDependencies": {
    "better-auth@1.2.9": "patches/better-auth@1.2.9.patch",
    "@better-auth/stripe@1.2.9": "patches/@better-auth%2Fstripe@1.2.9.patch",
    "ai@4.3.16": "patches/ai@4.3.16.patch",
    "@daveyplate/better-auth-ui@2.0.12": "patches/@daveyplate%2Fbetter-auth-ui@2.0.12.patch",
    "ai@5.0.0": "patches/ai@5.0.0.patch"
  }
}
