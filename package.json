{
  "name": "ragdoll",
  "private": true,
  "scripts": {
    "check": "npm-run-all check:default check:test",
    "fix": "npm-run-all 'check:default -- --write' 'check:test -- --write'",
    "check:default": "biome check .",
    "check:test": "biome check --config-path=./biome.test.json .",
    "test": "vitest --run",
    "tsc": "bun --filter '*' tsc",
    "build": "bun --filter '*' build",
    "dev:server": "bun --filter '*' dev:server",
    "prepare": "husky"
  },
  "workspaces": ["packages/*"],
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/bun": "^1.2.6",
    "@vitest/coverage-v8": "^3.0.9",
    "husky": "^9.1.7",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.7.2",
    "vitest": "^3.0.9"
  }
}
