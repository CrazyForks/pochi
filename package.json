{
  "name": "ragdoll",
  "private": true,
  "scripts": {
    "check": "npm-run-all check:default check:test",
    "fix": "npm-run-all 'check:default -- --write' 'check:test -- --write'",
    "check:default": "biome check .",
    "check:test": "biome check --config-path=./biome.test.json .",
    "test": "turbo test",
    "tsc": "turbo tsc",
    "build:server": "turbo --filter @ragdoll/server --filter @ragdoll/website build",
    "dev:server": "bun --filter '*' dev:server",
    "dep-check": "bun scripts/dep-check.ts",
    "prepare": "husky",
    "pre-push": "bash ./.husky/pre-push"
  },
  "workspaces": {
    "packages": ["packages/*"],
    "catalog": {
      "@ai-sdk/ui-utils": "^1.2.11",
      "@ai-sdk/provider-utils": "^2.2.8",
      "@preact/signals-core": "^1.8.0",
      "@quilted/threads": "^3.1.3",
      "@slack/bolt": "^4.2.1",
      "@e2b/code-interpreter": "^1.5.1",
      "ai": "^4.3.16",
      "better-auth": "^1.2.7",
      "hono": "^4.7.5",
      "kysely": "^0.27.6",
      "moment": "^2.30.1",
      "react": "^19",
      "remeda": "^2.21.3",
      "zod": "^3.24.2",
      "file-type": "^20.4.1"
    }
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/bun": "^1.2.6",
    "depcheck": "^1.4.7",
    "husky": "^9.1.7",
    "npm-run-all": "^4.1.5",
    "turbo": "^2.5.4",
    "typescript": "^5.7.2"
  },
  "packageManager": "bun@1.2.15"
}
