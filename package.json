{
  "name": "ragdoll",
  "private": true,
  "scripts": {
    "check": "npm-run-all check:default check:test",
    "fix": "npm-run-all 'check:default -- --write' 'check:test -- --write'",
    "check:default": "biome check .",
    "check:test": "biome check --config-path=./biome.test.json .",
    "test": "vitest --run --exclude packages/vscode",
    "tsc": "bun --filter '*' tsc",
    "build": "bun --filter '*' build",
    "dev:server": "bun --filter '*' dev:server",
    "prepare": "husky"
  },
  "workspaces": {
    "packages": ["packages/*"],
    "catalog": {
      "react": "^19",
      "ai": "^4.3.16",
      "zod": "^3.24.2",
      "@preact/signals-core": "^1.8.0",
      "@quilted/threads": "^3.1.3",
      "better-auth": "^1.2.7",
      "moment": "^2.30.1",
      "remeda": "^2.21.3",
      "kysely": "^0.27.6",
      "@slack/bolt": "^4.2.1"
    }
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/bun": "^1.2.6",
    "@vitest/coverage-v8": "^3.0.9",
    "husky": "^9.1.7",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.7.2",
    "vitest": "^3.0.9"
  }
}
