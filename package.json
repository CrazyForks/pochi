{
  "name": "ragdoll",
  "private": true,
  "scripts": {
    "check": "npm-run-all check:default check:test check:ast-grep",
    "fix": "npm-run-all 'check:default -- --write' 'check:test -- --write'",
    "check:ast-grep": "ast-grep scan",
    "check:default": "biome check .",
    "check:test": "biome check --config-path=./biome.test.json .",
    "test": "turbo test",
    "tsc": "turbo tsc",
    "build:server": "turbo --filter @ragdoll/server --filter @ragdoll/website build",
    "dep-check": "bun scripts/dep-check.ts",
    "prepare": "husky",
    "pre-push": "bash ./.husky/pre-push"
  },
  "workspaces": {
    "packages": ["packages/*"],
    "catalog": {
      "@ai-sdk/ui-utils": "^1.2.11",
      "@ai-sdk/provider-utils": "^2.2.8",
      "@preact/signals-core": "^1.8.0",
      "@quilted/threads": "^3.1.3",
      "@slack/bolt": "^4.2.1",
      "ai": "^4.3.16",
      "better-auth": "^1.2.9",
      "@daveyplate/better-auth-tanstack": "^1.3.6",
      "@better-auth/stripe": "^1.2.9",
      "hono": "^4.7.5",
      "kysely": "^0.27.6",
      "moment": "^2.30.1",
      "react": "^19",
      "react-icons": "^5.5.0",
      "remeda": "^2.21.3",
      "zod": "^3.24.2",
      "file-type": "^20.4.1",
      "tslog": "^4.9.3",
      "tailwindcss-animate": "^1.0.7",
      "emittery": "^1.1.0"
    }
  },
  "devDependencies": {
    "@ast-grep/cli": "^0.38.5",
    "@biomejs/biome": "1.9.4",
    "depcheck": "^1.4.7",
    "husky": "^9.1.7",
    "npm-run-all": "^4.1.5",
    "turbo": "^2.5.5",
    "typescript": "^5.7.2",
    "vitest": "^3.2.4"
  },
  "packageManager": "bun@1.2.19",
  "trustedDependencies": ["@ast-grep/cli"],
  "patchedDependencies": {
    "better-auth@1.2.9": "patches/better-auth@1.2.9.patch",
    "@better-auth/stripe@1.2.9": "patches/@better-auth%2Fstripe@1.2.9.patch",
    "ai@4.3.16": "patches/ai@4.3.16.patch",
    "@ai-sdk/google@1.2.18": "patches/@ai-sdk%2Fgoogle@1.2.18.patch",
    "@ai-sdk/react@1.2.12": "patches/@ai-sdk%2Freact@1.2.12.patch",
    "@daveyplate/better-auth-ui@2.0.12": "patches/@daveyplate%2Fbetter-auth-ui@2.0.12.patch"
  },
  "dependencies": {
    "@codemirror/lang-json": "^6.0.2",
    "@codemirror/language": "^6.11.2",
    "@codemirror/state": "^6.5.2",
    "@codemirror/view": "^6.38.1",
    "@uiw/react-codemirror": "^4.24.1"
  }
}
