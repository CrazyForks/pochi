{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "dev:vscode",
      "command": "cd packages/vscode && bun run watch",
      "group": {
        "kind": "none",
        "isDefault": true
      },
      "isBackground": true
    },
    {
      "type": "shell",
      "label": "dev:vscode-local",
      "command": "cd packages/vscode && POCHI_LOCAL_SERVER=true bun run watch",
      "group": {
        "kind": "none",
        "isDefault": true
      },
      "isBackground": true
    },
    {
      "type": "shell",
      "label": "dev:server-server",
      "command": "cd packages/server && bun run dev:server",
      "group": {
        "kind": "none",
        "isDefault": true
      },
      "isBackground": true,
      "problemMatcher": [
        {
          "pattern": [
            {
              "regexp": ".",
              "file": 1,
              "location": 2,
              "message": 3
            }
          ],
          "background": {
            "activeOnStart": true,
            "beginsPattern": ".",
            "endsPattern": "."
          }
        }
      ]
    },
    {
      "type": "shell",
      "label": "dev:server-website",
      "command": "cd packages/website && bun run dev:server",
      "group": {
        "kind": "none",
        "isDefault": true
      },
      "isBackground": true,
      "problemMatcher": [
        {
          "pattern": [
            {
              "regexp": ".",
              "file": 1,
              "location": 2,
              "message": 3
            }
          ],
          "background": {
            "activeOnStart": true,
            "beginsPattern": ".",
            "endsPattern": "."
          }
        }
      ]
    },
    {
      "label": "dev:server",
      "dependsOn": ["dev:server-website", "dev:server-server"],
      "isBackground": true
    }
  ]
}
