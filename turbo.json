{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "tsc": {
      "dependsOn": ["^tsc"]
    },
    "test": {},
    "build": {
      "dependsOn": ["tsc"],
      "outputs": ["dist/**"]
    },
    "pochi#build": {
      "dependsOn": ["@ragdoll/vscode-webui#build"],
      "outputs": ["assets/webview-ui/**", "dist/**"]
    },
    "@ragdoll/website#build": {
      "dependsOn": ["@ragdoll/vscode-webui#build"],
      "outputs": ["dist/**"]
    }
  },
  "globalPassThroughEnv": ["NODE_ENV"],
  "boundaries": {
    "implicitDependencies": ["vitest"]
  }
}
