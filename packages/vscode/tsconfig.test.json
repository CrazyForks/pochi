{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2022",
    "moduleResolution": "node",
    "outDir": "out",
    "rootDir": "src",
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "verbatimModuleSyntax": false,
    "noEmit": false,
    "allowImportingTsExtensions": false
  },
  "include": ["src/**/*.test.ts"]
}
