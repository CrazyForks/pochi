{
  "name": "vscode",
  "version": "0.0.1",
  "main": "./dist/extension.js",
  "devDependencies": {
    "@ragdoll/tools": "workspace:*",
    "@ragdoll/vscode-webui-bridge": "workspace:*",
    "@types/vscode": "^1.99.1"
  },
  "activationEvents": [],
  "contributes": {
    "views": {
      "ragdoll": [
        {
          "id": "ragdollWebui",
          "type": "webview",
          "name": "Ragdoll"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ragdoll",
          "title": "Ragdoll",
          "icon": "assets/icons/terminal.svg"
        }
      ]
    },
    "commands": [
      {
        "command": "ragdoll.accountSettings",
        "title": "Ragdoll: Account Settings"
      },
      {
        "command": "ragdoll.openLoginPage",
        "title": "Open Login Page",
        "category": "Ragdoll"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "ragdoll.openLoginPage",
          "when": "false"
        }
      ]
    }
  },
  "description": "Ragdoll",
  "displayName": "Ragdoll",
  "engines": {
    "vscode": "^1.82.0"
  },
  "private": true,
  "publisher": "com.getpochi",
  "scripts": {
    "watch:webui": "cd ../vscode-webui && npm run start",
    "build": "bun build ./src/extension.ts --outdir ./dist --external vscode --format cjs --target node",
    "watch:vscode": "bun build ./src/extension.ts --outdir ./dist --external vscode --format cjs --target node --watch",
    "watch": "npm-run-all --parallel watch:vscode watch:webui",
    "vscode": "code --extensionDevelopmentPath=$PWD",
    "dev": "npm-run-all --parallel watch vscode",
    "tsc": "tsc --noEmit"
  },
  "dependencies": {
    "@quilted/threads": "^3.1.3"
  }
}
