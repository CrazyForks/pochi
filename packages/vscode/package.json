{
  "private": true,
  "name": "@ragdoll/vscode",
  "displayName": "Ragdoll",
  "description": "Ragdoll",
  "version": "0.0.1",
  "publisher": "com.tabbyml",
  "engines": {
    "vscode": "^1.82.0"
  },
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "views": {
      "ragdoll": [
        {
          "id": "ragdollWebui",
          "type": "webview",
          "name": "Ragdoll Webui"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ragdoll",
          "title": "Ragdoll",
          "icon": "media/icons/refresh.svg"
        }
      ]
    }
  },
  "scripts": {
    "watch:webui": "cd ../vscode-webui && npm run start",
    "watch": "bun build ./src/extension.ts --outdir ./dist --external vscode --format cjs",
    "vscode": "code --extensionDevelopmentPath=$PWD",
    "dev": "npm-run-all --parallel watch watch:webui vscode",
    "tsc": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/vscode": "^1.98.0",
    "@ragdoll/tools": "workspace:*"
  }
}
